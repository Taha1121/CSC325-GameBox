<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.gamebox.LeaderboardPageController">
    <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="35.0" prefWidth="401.0" style="-fx-font-size: 24px;" text="Game Leaderboard" />
   <Button fx:id="leaderboardback" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#rtBackPg" prefHeight="25.0" prefWidth="401.0" text="GO BACK" />
    <TableView fx:id="leaderboardTable">
        <columns>
            <TableColumn fx:id="nameColumn" text="Player Name" />
            <TableColumn fx:id="tileGameBestTimeScoreColumn" text="Tile Game Best Time" />
            <TableColumn fx:id="chessScoreColumn" text="Chess Score" />
            <TableColumn fx:id="spaceInvadersScoreColumn" text="Space Invaders Score" />
            <TableColumn fx:id="swimmingScoreColumn" text="Swimming Score" />
        </columns>
    </TableView>
</VBox>
