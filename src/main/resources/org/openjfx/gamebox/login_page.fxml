    <Label layoutX="273.0" layoutY="105.0" text="Username"/>
    <Label layoutX="274.0" layoutY="192.0" text="Password"/>
    <TextField fx:id="usernameField" layoutX="225.0" layoutY="142.0"/>
    <PasswordField fx:id="passwordField" layoutX="226.0" layoutY="229.0"/>
    <Button fx:id="loginButton" layoutX="215.0" layoutY="295.0" mnemonicParsing="false" onAction="#handleLoginAction" text="Login"/>
    <Button fx:id="registerButton" layoutX="325.0" layoutY="295.0" mnemonicParsing="false" onAction="#handleRegisterAction" text="Register"/>
    <Label layoutX="177.0" layoutY="14.0" prefHeight="25.0" prefWidth="267.0" text="GameBox">
      <font>
        <Font size="60.0"/>
      </font>
    </Label>
  </children>
</Pane>
